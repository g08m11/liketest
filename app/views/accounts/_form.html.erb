<%= form_for @account do |f | %>

<div class="form-group">
  <p>
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </p>
  <p>
    <%= f.label :address, class: "control-label" %><br>
    <%= f.text_field :address, class: "form-control" %>
  </p>
  <p>
    <%= f.label :country, class: "control-label" %><br>
    <%= f.text_field :country, class: "form-control" %>
  </p>
  <p>
    <%= f.label :postal_code, class: "control-label" %><br>
    <%= f.text_field :postal_code, class: "form-control" %>
  </p>

  <p>
    <%= f.label :announce, class: "control-label" %><br>
    <%= f.text_area :announce, class: "form-control", rows: 5 %>
  </p>

  <p><%= f.submit class: "btn btn-primary" %></p>
</div>
<% end %>
