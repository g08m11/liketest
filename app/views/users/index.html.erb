<% provide(:title, "User List") %>
<h1>User List</h1>

<p><%= link_to "+ New User", new_user_path,  class: "btn btn-primary"%></p><br>

<ul>
<% @users.each do |user| %>
  <li>
  <%= user.id %> |
  <%= link_to user.name, user_path(user.id) %> |
  <%= user.email %> |
  <%= link_to "[Edit]", edit_user_path(user.id) %>
  <% if user.admin %>
    <%= "Admin" %>
    <% else %>
    <%= link_to "[Delete]", user_path(user.id), method: :delete, data:{ confirm: "Are you sure?" } %>
  <% end %>
</li>
<% end %>
</ul>
