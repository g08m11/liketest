<% provide(:title, "User: #{@user.name}") %>
<h1>User Profile</h1>
<table class="table table-bordered">
  <tr>
    <td>Name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Account Name</td>
    <% if @user.admin %>
    <td>Admin</td>
    <% else %>
    <td><%= @account.name %></td>
    <% end %>
  </tr>
</table>

<p>
  <%= link_to "[Edit]", edit_user_path(@user.id) %>
</p>
